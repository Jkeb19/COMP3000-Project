<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/textViewSeedPhraseTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Enter Your Seed Phrase"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:textColor="#000000" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewSeedPhrases"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@id/textViewSeedPhraseTitle"
        android:padding="8dp"
        android:scrollbars="vertical" />

    <Button
        android:id="@+id/buttonSubmitSeedPhrase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/recyclerViewSeedPhrases"
        android:layout_marginTop="16dp"
        android:backgroundTint="#050A11"
        android:text="Submit"
        android:textColor="#FFFFFF"
        android:padding="12dp" />
</RelativeLayout>
